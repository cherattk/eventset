{
    "name": "eventset",
    "version": "1.1.0",
    "description": "Publish-Subscribe Implementation with Hooks before and after notification",
    "author": "Karim Cheratt",
    "license": "MIT",
    "main": "index.js",
    "babel": {
        "presets": [
            "env"
        ]
    },
    "scripts": {
        "test": "npm run test:eventset && npm run test:eventhook",
        "test:eventset": "mocha --colors test/build/EventSetTest.js",
        "test:eventhook": "mocha --colors test/build/EventHookTest.js",
        "pretest": "npm run build:app && npm run build:test",
        "posttest": "npm run build:demo",
        "build:app": "rimraf ./build/* && babel ./src --out-dir ./build --source-maps && node build-package-file.js",
        "build:test": "rimraf ./test/build/* && babel ./test/src --out-dir ./test/build --source-maps",
        "build:demo": "cd demo/ && npm install && npm run build:browser"
    },
    "devDependencies": {
        "babel-cli": "6.26.0",
        "babel-preset-env": "1.6.1",
        "mocha": "5.0.5",
        "rimraf": "2.6.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cherattk/eventset.git"
    },
    "bugs": {
        "url": "https://github.com/cherattk/eventset/issues"
    },
    "homepage": "https://github.com/cherattk/eventset#readme"
}
